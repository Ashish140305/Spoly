{
  "manifest_version": 3,
  "name": "Spoly - Meeting Recorder",
  "version": "1.0",
  "description": "Capture tab audio and generate smart meeting notes seamlessly.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Toggle Spoly Bot"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}